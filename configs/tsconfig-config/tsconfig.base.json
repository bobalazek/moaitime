{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@moaitime/database-core": ["../../packages/database-core/src/index.ts"],
      "@moaitime/database-cache": ["../../packages/database-cache/src/index.ts"],
      "@moaitime/database-fixtures": ["../../packages/database-fixtures/src/index.ts"],
      "@moaitime/database-seeds": ["../../packages/database-seeds/src/index.ts"],
      "@moaitime/database-services": ["../../packages/database-services/src/index.ts"],
      "@moaitime/database-services-testing": [
        "../../packages/database-services-testing/src/index.ts"
      ],
      "@moaitime/database-testing": ["../../packages/database-testing/src/index.ts"],
      "@moaitime/emails-core": ["../../packages/emails-core/src/index.ts"],
      "@moaitime/emails-mailer": ["../../packages/emails-mailer/src/index.ts"],
      "@moaitime/shared-backend": ["../../packages/shared-backend/src/index.ts"],
      "@moaitime/shared-common": ["../../packages/shared-common/src/index.ts"],
      "@moaitime/shared-queue-worker": ["../../packages/shared-queue-worker/src/index.ts"],
      "@moaitime/recurrence": ["../../packages/recurrence/src/index.ts"],
      "@moaitime/web-core": ["../../packages/web-core/src/index.ts"],
      "@moaitime/web-ui": ["../../packages/web-ui/src/index.ts"],
      "@moaitime/web-ui-editor": ["../../packages/web-ui-editor/src/index.ts"],
      "@moaitime/logging": ["../../packages/logging/src/index.ts"],
      "@moaitime/processes": ["../../packages/processes/src/index.ts"],
      "@moaitime/rabbitmq": ["../../packages/rabbitmq/src/index.ts"],
      "@moaitime/bullmq": ["../../packages/bullmq/src/index.ts"],
      "@moaitime/redis": ["../../packages/redis/src/index.ts"],
      "@moaitime/job-runner": ["../../packages/job-runner/src/index.ts"],
      "@moaitime/uploader": ["../../packages/uploader/src/index.ts"],
      "@moaitime/global-events-notifier": ["../../packages/global-events-notifier/src/index.ts"],
      "@moaitime/global-events-processor": ["../../packages/global-events-processor/src/index.ts"],
      "@moaitime/user-experience-points-processor": [
        "../../packages/user-experience-points-processor/src/index.ts"
      ],
      "@moaitime/user-achievements-processor": [
        "../../packages/user-achievements-processor/src/index.ts"
      ],
      "@moaitime/user-notifications-processor": [
        "../../packages/user-notifications-processor/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
