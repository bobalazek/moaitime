{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@myzenbuddy/database-core": ["../../packages/database-core/src/index.ts"],
      "@myzenbuddy/database-fixtures": ["../../packages/database-fixtures/src/index.ts"],
      "@myzenbuddy/database-seeds": ["../../packages/database-seeds/src/index.ts"],
      "@myzenbuddy/database-services": ["../../packages/database-services/src/index.ts"],
      "@myzenbuddy/database-services-testing": [
        "../../packages/database-services-testing/src/index.ts"
      ],
      "@myzenbuddy/database-testing": ["../../packages/database-testing/src/index.ts"],
      "@myzenbuddy/emails-core": ["../../packages/emails-core/src/index.ts"],
      "@myzenbuddy/emails-mailer": ["../../packages/emails-mailer/src/index.ts"],
      "@myzenbuddy/shared-backend": ["../../packages/shared-backend/src/index.ts"],
      "@myzenbuddy/shared-common": ["../../packages/shared-common/src/index.ts"],
      "@myzenbuddy/shared-logging": ["../../packages/shared-logging/src/index.ts"],
      "@myzenbuddy/web-core": ["../../packages/web-core/src/index.ts"],
      "@myzenbuddy/web-ui": ["../../packages/web-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
