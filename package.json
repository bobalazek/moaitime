{
  "name": "@myzenbuddy/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "clean": "turbo clean --no-daemon --parallel",
    "cli": "cd apps/cli && pnpm build && pnpm run-exec",
    "database:check": "cd ./packages/database-core && pnpm scripts:check",
    "database:generate-migration": "cd ./packages/database-core && pnpm scripts:generate-migration",
    "database:update-metadata": "cd ./packages/database-core && pnpm scripts:update-metadata",
    "dev": "cross-env NODE_ENV=development turbo dev --no-daemon --parallel",
    "e2e": "cross-env NODE_ENV=test turbo e2e --no-daemon",
    "e2e:watch": "cross-env NODE_ENV=test turbo e2e:watch --no-daemon",
    "format": "prettier --write --no-error-on-unmatched-pattern \"./{apps,packages}/**/*.{ts,tsx}\" \"./**/*.json\"",
    "format:check": "prettier --check --no-error-on-unmatched-pattern \"./{apps,packages}/**/*.{ts,tsx}\" \"./**/*.json\"",
    "lint": "turbo lint --no-daemon",
    "prepare": "husky install",
    "serve": "turbo serve --no-daemon",
    "test": "cross-env NODE_ENV=test turbo test --no-daemon",
    "test:watch": "cross-env NODE_ENV=test turbo test:watch --no-daemon",
    "turbo:clean": "pnpx turbo daemon clean"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@myzenbuddy/eslint-config": "workspace:*",
    "@myzenbuddy/prettier-config": "workspace:*",
    "@myzenbuddy/tsconfig-config": "workspace:*",
    "@swc/core": "^1.3.100",
    "@types/node": "^20.10.2",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.0",
    "prettier": "^3.1.0",
    "syncpack": "^11.2.1",
    "tsup": "^8.0.1",
    "turbo": "^1.10.16",
    "vite": "^5.0.4",
    "vitest": "^0.34.6"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "react-email@1.10.0": "patches/react-email@1.10.0.patch"
    }
  }
}
