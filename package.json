{
  "name": "@myzenbuddy/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "clean": "pnpm dlx rimraf --glob **/node_modules --glob **/.turbo --glob **/dist",
    "dev": "turbo dev --no-daemon --filter='./apps/*'",
    "format": "prettier --write --no-error-on-unmatched-pattern \"./{apps,packages}/**/*.{ts,tsx}\" \"./**/*.json\"",
    "format:check": "prettier --check --no-error-on-unmatched-pattern \"./{apps,packages}/**/*.{ts,tsx}\" \"./**/*.json\"",
    "lint": "turbo lint --no-daemon",
    "prepare": "husky install",
    "test": "turbo test --no-daemon",
    "test:watch": "turbo test:watch --no-daemon",
    "turbo:clean": "pnpx turbo daemon clean"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@myzenbuddy/eslint-config": "workspace:*",
    "@myzenbuddy/prettier-config": "workspace:*",
    "@myzenbuddy/tsconfig-config": "workspace:*",
    "@swc/core": "^1.3.100",
    "@types/node": "^20.10.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "turbo": "^1.10.16",
    "vite": "^5.0.4",
    "vitest": "^0.34.6"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
