{
  "name": "@myzenbuddy/database-core",
  "version": "0.0.0",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --onSuccess \"tsc --emitDeclarationOnly --declaration\"",
    "lint": "eslint .",
    "scripts:check": "pnpm exec drizzle-kit check:pg --config=./src/drizzle.config.ts",
    "scripts:generate-migration": "pnpm exec drizzle-kit generate:pg --config=./src/drizzle.config.ts",
    "scripts:update-metadata": "pnpm exec drizzle-kit up:pg --config=./src/drizzle.config.ts"
  },
  "dependencies": {
    "@myzenbuddy/shared-backend": "*",
    "@myzenbuddy/shared-common": "*",
    "drizzle-kit": "^0.20.4",
    "drizzle-orm": "^0.29.0",
    "drizzle-zod": "^0.5.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2"
  }
}
